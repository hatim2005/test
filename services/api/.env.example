# Color Correction API - Environment Variables
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control - it's in .gitignore

# ==========================================
# APPLICATION SETTINGS
# ==========================================
DEBUG=False
ENVIRONMENT=development  # development, testing, production
APP_NAME=Color Correction API
APP_VERSION=1.0.0

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Generate a secure key: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production-please-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Development (SQLite)
DATABASE_URL=sqlite:///./color_correction.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/color_correction_db
# PostgreSQL in Docker
# DATABASE_URL=postgresql://postgres:password@db:5432/color_correction_db

# ==========================================
# FILE UPLOAD SETTINGS
# ==========================================
MAX_UPLOAD_SIZE=52428800  # 50 MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,tiff,tif,raw,dng,cr2,nef
UPLOAD_DIRECTORY=./uploads

# ==========================================
# CELERY & REDIS SETTINGS (Background Tasks)
# ==========================================
# Redis for local development
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis in Docker
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# RabbitMQ alternative
# CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//

# ==========================================
# CORS SETTINGS
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/api.log  # Optional: set to enable file logging

# ==========================================
# ARUCO MARKER DETECTION
# ==========================================
ARUCO_DICT=DICT_4X4_50
MIN_MARKER_AREA=100  # Minimum pixels for marker detection

# ==========================================
# COLOR CORRECTION SETTINGS
# ==========================================
DEFAULT_COLOR_SPACE=sRGB
MAX_DELTA_E=10.0  # Maximum acceptable color difference

# ==========================================
# PAGINATION
# ==========================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==========================================
# DEVELOPMENT ONLY (Comment out in production)
# ==========================================
# Enable SQL query logging
SQL_ECHO=False

# ==========================================
# OPTIONAL: EXTERNAL SERVICES
# ==========================================
# If using cloud storage (AWS S3, Google Cloud, etc.)
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_S3_BUCKET_NAME=your-bucket

# If using email service
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@colorcorrection.com

# ==========================================
# NOTES
# ==========================================
# 1. Never commit .env to version control
# 2. For production, use strong, unique SECRET_KEY
# 3. Use environment-specific databases
# 4. Store sensitive values in secure vaults/secret managers
# 5. Rotate secrets regularly in production
# 6. Use different Redis/Celery queues for different environments
